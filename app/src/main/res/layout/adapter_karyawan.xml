<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/colider_karyawan"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_profil_karyawan"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:contentDescription="@string/img_profil"
        android:src="@mipmap/ic_launcher_round"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ImageContrastCheck" />

    <TextView
        android:id="@+id/divisi_karyawan"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="#515151"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/karyawan_icon_edit"
        app:layout_constraintEnd_toStartOf="@+id/karyawan_icon_edit"
        app:layout_constraintTop_toTopOf="@+id/karyawan_icon_edit"
        tools:ignore="TextContrastCheck"
        tools:text="Android Studio" />

    <ImageView
        android:id="@+id/karyawan_icon_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/icon_titik3"
        android:paddingStart="20dp"
        android:paddingTop="8dp"
        android:paddingEnd="24dp"
        android:paddingBottom="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/img_profil_karyawan"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/img_profil_karyawan"
        app:srcCompat="@drawable/ic_titik3" />

    <TextView
        android:id="@+id/nama_karyawan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="#515151"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/img_profil_karyawan"
        app:layout_constraintEnd_toStartOf="@+id/divisi_karyawan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_profil_karyawan"
        app:layout_constraintTop_toTopOf="@+id/img_profil_karyawan"
        app:layout_constraintVertical_bias="0.16000003"
        tools:text="Papa Zola" />

    <TextView
        android:id="@+id/email_karyawan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/nunito"
        android:textColor="#515151"
        android:textSize="11sp"
        app:layout_constraintBottom_toBottomOf="@+id/divisi_karyawan"
        app:layout_constraintEnd_toStartOf="@+id/divisi_karyawan"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/img_profil_karyawan"
        app:layout_constraintTop_toBottomOf="@+id/nama_karyawan"
        app:layout_constraintVertical_bias="0.32999998"
        tools:text="papazola@gmail.com" />


</androidx.constraintlayout.widget.ConstraintLayout>
